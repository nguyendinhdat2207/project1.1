# .env.example
# Configuration file for Project1
# Copy this to .env and fill in your values

# ============================================
# Uniswap V3 Configuration
# ============================================

# RPC URL for blockchain connection
# ⭐ KHUYẾN NGHỊ: 1RPC (nhanh nhất, miễn phí)
RPC_URL=https://1rpc.io/base

# Tùy chọn khác:
# RPC_URL=https://mainnet.base.org (chính thức, chậm hơn)
# RPC_URL=https://base.publicnode.com (miễn phí, tốc độ tốt)
# RPC_URL=https://base-rpc.publicnode.com (miễn phí, tốc độ tốt)

# ============================================
# Kyberswap Configuration
# ============================================

# Default is configured in kyberswap_api.py
# KYBER_API_BASE=https://limit-order.kyberswap.com/read-partner/api/v1
# CHAIN_ID=8453
# WETH_ADDRESS=0x4200000000000000000000000000000000000006
# USDT_ADDRESS=0xfde4C96c8593536E31F229EA8f37b2ADa2699bb2

# ============================================
# Backend Server Configuration
# ============================================

# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Enable debug mode (development only!)
DEBUG=False

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ============================================
# API Rate Limiting
# ============================================

# Requests per minute to Kyberswap API
# (Add if you implement rate limiting)
# KYBER_API_RATE_LIMIT=60

# ============================================
# Database (if you add later)
# ============================================

# DATABASE_URL=sqlite:///./orderbook.db
# DATABASE_URL=postgresql://user:password@localhost/dbname

# ============================================
# Logging
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================
# Notifications (if you add later)
# ============================================

# Webhook URL for notifications
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK

# Email settings
# EMAIL_FROM=noreply@example.com
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
