# .env.example
# Configuration file for Project1
# Copy this to .env and fill in your values

# ============================================
# Base Network RPC Configuration
# ============================================

# Choose one of the following RPC providers:

# ⭐ OPTION 1: Alchemy (Recommended - Best performance)
# Sign up at: https://www.alchemy.com/
# Free tier: 300M compute units/month
# RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY

# ⭐ OPTION 2: Infura (Popular choice)
# Sign up at: https://infura.io/
# Free tier: 100K requests/day
# RPC_URL=https://base-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ⭐ OPTION 3: 1RPC (Fast, Free, No signup needed)
RPC_URL=https://1rpc.io/base

# OPTION 4: QuickNode (Enterprise-grade)
# Sign up at: https://www.quicknode.com/
# RPC_URL=https://YOUR_ENDPOINT.base-mainnet.quiknode.pro/YOUR_TOKEN/

# OPTION 5: Base Public RPC (Official, may be slower)
# RPC_URL=https://mainnet.base.org

# OPTION 6: PublicNode (Free, good speed)
# RPC_URL=https://base.publicnode.com

# ============================================
# Kyberswap Configuration (Optional)
# ============================================

# Kyber Limit Order API endpoint
KYBER_API_URL=https://limit-order.kyberswap.com/read-partner/api/v1/orders

# Chain ID for Base network
# CHAIN_ID=8453

# Token addresses (already configured in code)
# WETH_ADDRESS=0x4200000000000000000000000000000000000006
# USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# ============================================
# Backend Server Configuration
# ============================================

# Server host and port
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Enable debug mode (development only!)
DEBUG=False

# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ============================================
# API Rate Limiting
# ============================================

# Requests per minute to Kyberswap API
# (Add if you implement rate limiting)
# KYBER_API_RATE_LIMIT=60

# ============================================
# Database (if you add later)
# ============================================

# DATABASE_URL=sqlite:///./orderbook.db
# DATABASE_URL=postgresql://user:password@localhost/dbname

# ============================================
# Logging
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ============================================
# Notifications (if you add later)
# ============================================

# Webhook URL for notifications
# WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK

# Email settings
# EMAIL_FROM=noreply@example.com
# EMAIL_SMTP_SERVER=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
